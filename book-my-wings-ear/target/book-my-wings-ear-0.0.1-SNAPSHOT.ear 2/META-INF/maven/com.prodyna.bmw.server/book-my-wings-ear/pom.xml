	<artifactId>book-my-wings-ear</artifactId>
	<packaging>ear</packaging>
	<name>Book My Wings EAR</name>
	<description>EAR-Packaging Project for BookMyWings-Server-Components</description>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.prodyna.bmw.server</groupId>
			<artifactId>aircraft-service</artifactId>
			<version>0.0.1-SNAPSHOT</version>
			<type>ejb</type>
		</dependency>
	</dependencies>
</project>